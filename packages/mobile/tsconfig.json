{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "App.tsx", "index.ts"],
  "references": [
    { "path": "../shared" }
  ],
  "exclude": ["node_modules"]
}
