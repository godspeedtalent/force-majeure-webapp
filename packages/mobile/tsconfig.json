{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "include": [
    "src",
    "App.tsx",
    "index.ts",
    "nativewind-env.d.ts"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}